model AIConfiguration {
  id                String   @id @default(cuid())
  
  // Identifica√ß√£o
  name              String   @default("Configura√ß√£o Principal")
  description       String?
  
  // Prompt Base
  systemPrompt      String   @db.Text
  personality       String   @default("Emp√°tica e profissional")
  tone              String   @default("Conversacional e amig√°vel")
  
  // Comportamento
  useEmojis         Boolean  @default(true)
  offerPackages     Boolean  @default(true)
  askInsurance      Boolean  @default(true)
  maxResponseLength Int      @default(500)
  
  // Regras de Neg√≥cio (JSON configur√°vel)
  businessRules     Json?
  
  // Configura√ß√µes Avan√ßadas
  temperature       Float    @default(0.7)
  maxTokens         Int      @default(1000)
  
  // Controle
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Rela√ß√µes
  examples          AIExample[]
  transferRules     TransferRule[]
}

// Exemplos de conversas para treinar a IA (Few-Shot Learning)
model AIExample {
  id              String   @id @default(cuid())
  configId        String
  config          AIConfiguration @relation(fields: [configId], references: [id], onDelete: Cascade)
  
  // Identifica√ß√£o
  name            String
  description     String?
  category        String   @default("GERAL") // AGENDAMENTO, INFORMACAO, ATRASO, etc
  
  // Exemplo de Conversa
  userMessage     String   @db.Text
  expectedIntent  String   // INFORMACAO, AGENDAR, CANCELAR, etc
  expectedAction  String   // continue, transfer_human, start_workflow, collect_data
  botResponse     String   @db.Text
  
  // Entidades Esperadas
  entities        Json     // { procedimento, convenio, clinica, data, horario }
  
  // Metadados
  confidence      Float    @default(0.95)
  priority        Int      @default(0) // Ordem de import√¢ncia
  
  // Controle
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([configId, isActive])
  @@index([category])
}

// Regras de Transfer√™ncia para Humano
model TransferRule {
  id              String   @id @default(cuid())
  configId        String
  config          AIConfiguration @relation(fields: [configId], references: [id], onDelete: Cascade)
  
  // Identifica√ß√£o
  name            String
  description     String?
  
  // Condi√ß√µes de Ativa√ß√£o
  keywords        String[] // Palavras-chave que ativam a regra
  intents         String[] // Inten√ß√µes que ativam a regra
  minConfidence   Float    @default(0.6)
  
  // A√ß√£o
  targetQueue     String   // AGUARDANDO, PRIORITY_QUEUE, HUMAN_QUEUE
  priority        Int      @default(0) // Prioridade da regra (maior = mais importante)
  
  // Mensagem de Transfer√™ncia
  transferMessage String?  @db.Text
  
  // Controle
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([configId, isActive])
  @@index([priority])
}

// ‚úÖ NOVO: Configura√ß√µes do Sistema
model SystemSettings {
  id                        String   @id @default(cuid())
  
  // Timeout de inatividade (padr√£o: 20 minutos)
  inactivityTimeoutMinutes  Int      @default(20)
  
  // Mensagem de encerramento
  closingMessage            String   @default("Obrigado pelo contato! Estamos √† disposi√ß√£o. üòä") @db.Text
  
  // Outras configura√ß√µes
  autoAssignEnabled         Boolean  @default(true)
  maxConversationsPerAgent  Int      @default(5)
  
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
  
  @@map("system_settings")
}

// ============================================
// SISTEMA DE REGRAS E TEMPLATES DE RESPOSTA
// ============================================

// Sistema de Regras e Templates de Resposta
model ResponseRule {
  id          String   @id @default(cuid())
  
  // Classifica√ß√£o
  intent      String   // 'INFORMACAO', 'AGENDAR', 'VALOR_PARTICULAR', 'CONVENIO_PROCEDIMENTOS', etc.
  context     String?  // 'procedimento', 'convenio', 'geral'
  
  // Filtros (quando aplicar esta regra)
  targetType  String?  // 'procedure', 'insurance', 'general'
  targetId    String?  // Code do procedimento ou conv√™nio espec√≠fico
  
  // Template de resposta
  template    String   @db.Text // Template com vari√°veis: "{procedimento} custa R$ {preco}"
  conditions  Json?    // Condi√ß√µes: { requiresEvaluation: true, hasPackage: true }
  priority    Int      @default(0) // Ordem de aplica√ß√£o (maior = mais priorit√°rio)
  
  // Regras espec√≠ficas
  rules       Json?    // { evaluationPrice: 200, includePackages: true }
  
  // Metadata
  isActive    Boolean  @default(true)
  description String?  // Descri√ß√£o para o admin
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([intent, targetType])
  @@index([isActive])
  @@index([priority])
}

// Regras espec√≠ficas por procedimento
model ProcedureRule {
  id            String   @id @default(cuid())
  procedureCode String   @unique // C√≥digo do procedimento
  
  // Regras de precifica√ß√£o
  requiresEvaluation     Boolean  @default(false)
  evaluationPrice        Decimal? @db.Decimal(10,2)
  evaluationInPackage    Boolean  @default(false) // Avalia√ß√£o inclu√≠da em pacotes?
  evaluationIncludesFirstSession Boolean @default(true) // Avalia√ß√£o j√° inclui a primeira sess√£o? (padr√£o: true)
  minimumPackageSessions Int?     // A partir de quantas sess√µes inclui avalia√ß√£o
  
  // Regras de apresenta√ß√£o
  highlightPackages      Boolean  @default(false)
  showEvaluationFirst    Boolean  @default(true)
  customMessage          String?  @db.Text // Mensagem especial
  
  // Condi√ß√µes especiais (JSON)
  specialConditions      Json?    // { "packageDiscount": "evaluation_free", "minSessions": 10 }
  
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([procedureCode])
}

// Regras espec√≠ficas por conv√™nio
model InsuranceRule {
  id            String   @id @default(cuid())
  insuranceCode String   @unique // C√≥digo do conv√™nio
  
  // Regras de apresenta√ß√£o
  showCoveredProcedures Boolean  @default(true)
  mentionOtherBenefits  Boolean  @default(true)
  customGreeting        String?  @db.Text // "√ìtimo! Com {convenio}..."
  
  // Regras de valores
  hideValues            Boolean  @default(true) // Esconder valores para conv√™nios normais
  canShowDiscount       Boolean  @default(false) // Pode mostrar desconto?
  
  // Procedimentos especiais (JSON)
  specialProcedures     Json?    // Lista de procedimentos com regras especiais
  
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([insuranceCode])
}

// ============================================
// SISTEMA DE WEBHOOKS PARA INTEGRA√á√ïES EXTERNAS
// ============================================

model WebhookSubscription {
  id              String    @id @default(cuid())
  name            String
  description     String?
  url             String
  token           String    @unique
  events          String[]  @default(["received_message", "started_chat"])
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  lastTriggeredAt DateTime?
  metadata        Json?
  
  logs            WebhookLog[]
  
  @@index([isActive])
  @@index([token])
}

model WebhookLog {
  id             String   @id @default(cuid())
  subscriptionId String
  eventType      String
  payload        Json
  statusCode     Int?
  responseTime   Int?
  error          String?  @db.Text
  success        Boolean  @default(false)
  createdAt      DateTime @default(now())
  
  subscription   WebhookSubscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  
  @@index([subscriptionId])
  @@index([createdAt])
  @@index([success])
}

